// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Users table
model User {
  id               String    @id @default(uuid())
  email            String    @unique
  passwordHash     String    @map("password_hash")
  name             String
  avatarUrl        String?   @map("avatar_url")
  subscriptionTier String    @default("free") @map("subscription_tier")
  role             String    @default("user")
  status           String    @default("active")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")
  lastLoginAt      DateTime? @map("last_login_at")

  // Relations
  favoriteWords      FavoriteWord[]
  learningActivities LearningActivity[]
  userStreak         UserStreak?
  refreshTokens      RefreshToken[]
  vocabularyLists    VocabularyList[]
  subscriptions      Subscription[]
  usageRecords       UsageRecord[]

  @@map("users")
}

// Refresh tokens for JWT authentication
model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique @db.VarChar(512)
  userId    String   @map("user_id")
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

// Favorite words table
model FavoriteWord {
  id               String    @id @default(uuid())
  userId           String    @map("user_id")
  word             String    @db.VarChar(255)
  originalText     String?   @map("original_text") @db.Text
  pronunciation    Json?
  meanings         Json?
  exampleSentences Json?     @map("example_sentences")
  sourceUrl        String?   @map("source_url") @db.VarChar(2048)
  context          String?   @db.Text
  tags             Json      @default("[]")
  masteryLevel     String    @default("new") @map("mastery_level")
  reviewCount      Int       @default(0) @map("review_count")
  lastReviewedAt   DateTime? @map("last_reviewed_at")
  favoritedAt      DateTime  @default(now()) @map("favorited_at")

  // Relations
  user               User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  learningActivities LearningActivity[]
  vocabularyLists    VocabularyListWord[]

  @@unique([userId, word])
  @@index([userId])
  @@index([word])
  @@index([favoritedAt])
  @@map("favorite_words")
}

// Learning activity table
model LearningActivity {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  activityType String   @map("activity_type")
  wordId       String?  @map("word_id")
  metadata     Json?
  createdAt    DateTime @default(now()) @map("created_at")

  // Relations
  user User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  word FavoriteWord? @relation(fields: [wordId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([createdAt])
  @@map("learning_activities")
}

// User streaks table
model UserStreak {
  userId           String    @id @map("user_id")
  currentStreak    Int       @default(0) @map("current_streak")
  longestStreak    Int       @default(0) @map("longest_streak")
  lastActivityDate DateTime? @map("last_activity_date") @db.Date
  updatedAt        DateTime  @updatedAt @map("updated_at") @db.DateTime(0)

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_streaks")
}

// Custom vocabulary lists table
model VocabularyList {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  name        String
  description String?
  color       String?  @default("#3b82f6")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  user  User                    @relation(fields: [userId], references: [id], onDelete: Cascade)
  words VocabularyListWord[]

  @@unique([userId, name])
  @@index([userId])
  @@map("vocabulary_lists")
}

// Junction table for vocabulary list words
model VocabularyListWord {
  id        String   @id @default(uuid())
  listId    String   @map("list_id")
  wordId    String   @map("word_id")
  addedAt   DateTime @default(now()) @map("added_at")

  // Relations
  list VocabularyList @relation(fields: [listId], references: [id], onDelete: Cascade)
  word FavoriteWord   @relation(fields: [wordId], references: [id], onDelete: Cascade)

  @@unique([listId, wordId])
  @@index([listId])
  @@index([wordId])
  @@map("vocabulary_list_words")
}

// User achievements table
model UserAchievement {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  achievementId String  @map("achievement_id")
  unlockedAt   DateTime @default(now()) @map("unlocked_at")
  
  @@unique([userId, achievementId])
  @@index([userId])
  @@map("user_achievements")
}

// User daily goals table
model UserGoal {
  id              String   @id @default(uuid())
  userId          String   @unique @map("user_id")
  dailyWordGoal   Int      @default(10) @map("daily_word_goal")
  dailyReviewGoal Int      @default(20) @map("daily_review_goal")
  reminderEnabled Boolean  @default(false) @map("reminder_enabled")
  reminderTime    String?  @map("reminder_time")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  @@map("user_goals")
}


// Subscription plan table - defines available subscription plans
model SubscriptionPlan {
  id          String   @id @default(uuid())
  name        String   @unique // free, premium
  displayName String   @map("display_name")
  description String?  @db.Text
  price       Decimal  @default(0) @db.Decimal(10, 2)
  duration    Int      @default(0) // days, 0 = lifetime
  features    Json     // plan features configuration JSON
  isActive    Boolean  @default(true) @map("is_active")
  sortOrder   Int      @default(0) @map("sort_order")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  subscriptions Subscription[]

  @@map("subscription_plans")
}

// User subscription table - tracks user subscriptions
model Subscription {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  planId    String    @map("plan_id")
  status    String    @default("active") // active, expired, cancelled
  startDate DateTime  @default(now()) @map("start_date")
  endDate   DateTime? @map("end_date") // null = lifetime
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  // Relations
  user User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan SubscriptionPlan @relation(fields: [planId], references: [id])

  @@index([userId])
  @@index([status])
  @@index([endDate])
  @@map("subscriptions")
}

// Usage record table - tracks daily usage for rate limiting
model UsageRecord {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  type      String   // translation, review, collection, website_rule
  count     Int      @default(0)
  date      DateTime @db.Date // for daily limits
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type, date])
  @@index([userId])
  @@index([date])
  @@map("usage_records")
}
